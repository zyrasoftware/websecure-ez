{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "src/lib",
    "composite": false,
    "incremental": false,
    "noEmit": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017"
  },
  "include": ["src/lib/**/*"],
  "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts", "dist", "node_modules"]
} 